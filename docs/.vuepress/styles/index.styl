#app .home #main-title{
	font-weight: 700;
	font-size: 2rem;
}
#app .home .hero .description{
	color: #606266;
	font-size: 1.1rem;
	border: none;
	line-height: 1.7;
}
#app .home .feature p {
	font-size: 14px;
	color: #909399;
	margin-bottom: 40px;
}

#app .home .footer {
	padding: 30px 0;
	color: #606266;
	text-align: center;
	font-size: 14px;
}
#app .sidebar-group.is-sub-group > .sidebar-heading:not(.clickable) {
	opacity: 1;
}
#app .sidebar-group.is-sub-group > .sidebar-heading {
	font-size: 1em;
	line-height: 1.4;
	font-weight: normal;
	padding-left: 2rem;
}

#app .sidebar-links .sidebar-heading{
	font-size: 1.02em;
}
#app .sidebar > .sidebar-links > li > a.sidebar-link {
	font-size: 1.02em;
}
#app blockquote{
  font-size: 0.94rem;
  color: #858585;
  border-left: 0.2rem solid #409eff;
  margin: 1rem 0;
  padding: 0 0 0 20px;
}
#app blockquote p{
  font-weight: 600;
  margin-left: 0;
}


.sidebar::-webkit-scrollbar, body::-webkit-scrollbar {
	width: 6px;
}
.sidebar:hover::-webkit-scrollbar-thumb, body::-webkit-scrollbar-thumb {
  background: rgba(135,135,135,0.4);
}
.sidebar::-webkit-scrollbar-thumb {
	background: transparent;
	border-radius: 6px;
}
.sidebar:hover::-webkit-scrollbar-track, body::-webkit-scrollbar-track {
  background:  rgba(135,135,135,0.1);
}
body::-webkit-scrollbar-thumb {
	background: rgba(135,135,135,0.5);
	border-radius: 6px;
}

#app .page-edit .edit-link a{
  color: #409eff;
}

#app .go-to-top{
  z-index:9;
}

/* 滚动条美化方案开始 去掉下方css的注释即可 */
#app .ra-wrapper ::-webkit-scrollbar {
	width: 6px;
	height: 6px;
}
#app .ra-wrapper ::-webkit-scrollbar-track {
	background: rgba(135, 135, 135, 0.1);
}
#app .ra-wrapper ::-webkit-scrollbar-thumb {
	background: rgba(135, 135, 135, 0.4);
	border-radius: 6px;
}
#app .ra-wrapper ::-webkit-scrollbar-thumb:hover {
	background: rgba(135, 135, 135, 0.8);
}
/* 滚动条美化方案结束 */

#app .ra-wrapper{
  width : 270px;
  max-height: 90vh;
}

#app .theme-default-content:not(.custom){
  padding-right: calc(270px + 2.5rem);
}

#app .ra-wrapper .ra-menu-item{
  max-width: calc(270px - 40px);
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}

@media (max-width: 1366px) {
  #app .ra-wrapper{
    display: none;
  }
  #app .theme-default-content:not(.custom){
    padding: 2rem 2.5rem;
  }
}

@media (min-width: 2000px) {
  #app .ra-wrapper{
    width : 360px;
  }
  #app .theme-default-content:not(.custom){
    padding-right: calc(360px + 2.5rem);
  }
  #app .ra-wrapper .ra-menu-item{
    max-width: calc(360px - 40px);
  }
}

@media (min-width: 3000px) {
  #app .ra-wrapper{
    width : 460px;
  }
  #app .theme-default-content:not(.custom){
    padding-right: calc(460px + 2.5rem);
  }
  #app .ra-wrapper .ra-menu-item{
    max-width: calc(460px - 40px);
  }
}

